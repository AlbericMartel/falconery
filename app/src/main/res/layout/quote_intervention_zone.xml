<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quoteInterventionZone"
            type="am.falconry.domain.QuoteInterventionZone" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@{quoteInterventionZone.interventionZoneName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trapping"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            tools:text="Emplacement"/>

        <CheckBox
            android:id="@+id/trapping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:button="@drawable/ic_cage_24_toggle"
            android:checked="@={quoteInterventionZone.trapping}"
            app:layout_constraintEnd_toStartOf="@id/scaring"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/scaring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_eagle_24_toggle"
            android:checked="@={quoteInterventionZone.scaring}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>