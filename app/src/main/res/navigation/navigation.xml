<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeViewPagerFragment">

    <fragment
        android:id="@+id/clientFragment"
        android:name="am.falconry.client.ClientFragment"
        android:label="@string/clientScreen"
        tools:layout="@layout/fragment_client" >
        <argument
            android:name="clientId"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_clientFragment_to_homeViewPagerFragment"
            app:destination="@id/homeViewPagerFragment" />
        <action
            android:id="@+id/action_clientFragment_to_clientInterventionZoneFragment"
            app:destination="@id/clientInterventionZoneFragment" >
            <argument
                android:name="clientId"
                android:defaultValue="0L" />
            <argument
                android:name="interventionZoneId"
                android:defaultValue="0L" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/homeViewPagerFragment"
        android:name="am.falconry.HomeViewPagerFragment"
        android:label="HomeViewPagerFragment" >
        <action
            android:id="@+id/action_homeViewPagerFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_homeViewPagerFragment_to_quoteFragment"
            app:destination="@id/quoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/quoteFragment"
        android:name="am.falconry.quote.QuoteFragment"
        android:label="QuoteFragment" >
        <action
            android:id="@+id/action_quoteFragment_to_homeViewPagerFragment"
            app:destination="@id/homeViewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientInterventionZoneFragment"
        android:name="am.falconry.clientinterventionzone.ClientInterventionZoneFragment"
        android:label="ClientInterventionZoneFragment" >
        <argument android:name="clientId"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_clientInterventionZoneFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <argument
            android:name="interventionZoneId"
            android:defaultValue="0L" />
    </fragment>
</navigation>