<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeViewPagerFragment">

    <fragment
        android:id="@+id/newClientFragment"
        android:name="am.falconry.client.ClientFragment"
        android:label="@string/clientScreen"
        tools:layout="@layout/fragment_client" >
        <argument
            android:name="clientId"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_newClientFragment_to_homeViewPagerFragment"
            app:destination="@id/homeViewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeViewPagerFragment"
        android:name="am.falconry.HomeViewPagerFragment"
        android:label="HomeViewPagerFragment" >
        <action
            android:id="@+id/action_homeViewPagerFragment_to_newClientFragment"
            app:destination="@id/newClientFragment" />
    </fragment>
</navigation>